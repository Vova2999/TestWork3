<Window x:Class="App.Views.Main.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:behaviors="clr-namespace:App.Wpf.Common.Behaviors;assembly=App.Wpf.Common"
		xmlns:main="clr-namespace:App.Views.Main"
		Width="800"
		Height="400"
		Title="Header"
		WindowStartupLocation="CenterScreen"
		mc:Ignorable="d"
		d:DataContext="{DynamicResource DemoModel}">

	<Window.Resources>
		<main:DemoModel x:Key="DemoModel" />
	</Window.Resources>

	<b:Interaction.Behaviors>
		<behaviors:DragMoveBehavior />
	</b:Interaction.Behaviors>

	<b:Interaction.Triggers>
		<b:EventTrigger EventName="Loaded">
			<b:InvokeCommandAction Command="{Binding TestCommand, Mode=OneWay}" />
		</b:EventTrigger>
	</b:Interaction.Triggers>

	<Grid>
		<Button Width="100"
				Height="50"
				Content="Test"
				Command="{Binding TestCommand, Mode=OneWay}" />
	</Grid>
</Window>